<%- include("partials/header") %>

<div class="form-container">
  <h1>Create a New Province</h1>
  <form action="/" method="post">
    <div class="section">
      <label for="name">Name</label>
      <input type="text" name="name" required />

      <label for="description">Description</label>
      <input type="text" name="description" required />

      <label for="known_for">Known For</label>
      <input type="text" name="known_for" required />
    </div>

    <div id="pictures_section" class="section">
      <h4>Pictures</h4>
      <div class="picture-group">
        <label>Picture</label>
        <input type="text" name="pictures" required />
      </div>
    </div>

    <div id="people_section" class="section">
      <h4>Famous People</h4>
      <div class="people-group">
        <label>Name</label>
        <input type="text" name="names" required />
        <label>Bio</label>
        <input type="text" name="bios" required />
        <label> image </label>
        <input type="text" name="people_imgs" placeholder="Image URL" />
      </div>
    </div>

    <div id="food_section" class="section">
      <h4>Famous Food</h4>
      <div class="food-group">
        <label>Name</label>
        <input type="text" name="food_names" required />
        <label>Description</label>
        <input type="text" name="food_descriptions" required />
        <label>Image</label>
        <input type="text" name="food_imgs" required />
      </div>
    </div>

    <div class="form-buttons">
      <button onclick="add_picture()" type="button">Add Picture</button>
      <button onclick="add_bio()" type="button">Add person</button>
      <button onclick="add_food()" type="button">Add Food</button>
      <button type="submit">Save</button>
    </div>
  </form>
  <br />
  <a href="/">home page</a>
</div>

<%- include("partials/footer") %>
