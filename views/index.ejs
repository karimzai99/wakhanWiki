<%- include("partials/header") %>

<div class="container">
  <h1>List of Provinces</h1>

  <div class="action-buttons">
    <a href="/new">Add New Province</a>
  </div>

  <ul class="province-list">
    <% provinces.forEach(p => { %>
    <li class="province-card">
      <% if (p.pictures && p.pictures.length > 0) { %>
      <img
        src="<%= p.pictures[0].img %>"
        alt="Image of <%= p.name %>"
        class="province-card-image"
      />
      <% } %>
      <h3><a href="/<%= p._id%>"> <%= p.name %> </a></h3>
      <p><%= p.description %></p>

      <div class="action-buttons">
        <form action="/<%=p._id %>?_method=DELETE" method="post">
          <input type="submit" value="DELETE" class="delete-btn" />
        </form>
      </div>
    </li>
    <% }) %>
  </ul>
</div>

<%- include("partials/footer") %>
